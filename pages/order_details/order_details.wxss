/* pages/order_details/order_details.wxss */


/*地址栏样式*/

.address {
    margin: 0 auto;
    width: 700rpx;
    height: 220rpx;
    background-color: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
    position: relative;
}


/*地址图标*/

.timg {
    height: 80rpx;
    width: 81rpx;
    margin: 60rpx 20rpx 0 20rpx;
}


/*右侧文字*/

.tips {
    color: #ff4a01;
    position: absolute;
    top: 165rpx;
    font-size: 26rpx;
}

.userName {
    font-size: 32rpx;
    position: absolute;
    top: 15rpx;
}

.tel {
    font-size: 28rpx;
    color: #a4a4a4;
    position: absolute;
    left: 198rpx;
    top: 22rpx;
}

.right {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 95rpx;
    left: 650rpx;
}

.address_list {
    position: absolute;
    top: 70rpx;
    font-size: 28rpx;
    width: 530rpx;
}

.order_detail {
    margin: 0 auto;
    width: 660rpx;
    height: auto;
    min-height: 480rpx;
    background-color: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
    position: relative;
    /* padding-left: 20rpx;
  padding-right: 20rpx; */
    padding: 20rpx;
}


/*官方旗舰店*/

.shop_title {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}

.img_eemb {
    width: 50rpx;
    height: 45rpx;
    margin: 20rpx 0rpx;
}

.eemb_shop {
    font-size: 24rpx;
    margin-left: 20rpx;
}

.hr {
    width: 100%;
    border: 1rpx solid #f4f4f4;
}

.detail_img {
    width: 150rpx;
    height: 150rpx;
    border: 1rpx solid #a4a4a4;
}

.details {
    position: relative;
    width: 660rpx;
    height: 150rpx;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid#f4f4f4;
}

.detail_img {
    position: absolute;
}

.title {
    position: absolute;
    left: 170rpx;
    font-size: 30rpx;
}

.detail {
    position: absolute;
    left: 170rpx;
    color: #a4a4a4;
    font-size: 28rpx;
    margin-top: 50rpx;
}

.price {
    position: absolute;
    right: 0rpx;
}

.num {
    position: absolute;
    right: 0rpx;
    color: #a4a4a4;
    font-size: 24rpx;
    margin-top: 40rpx;
}


