.stepper {
    width: 200rpx;
    height: 60rpx;
    display: flex;
    text-align: center;
    float: right;
    margin-top: 90rpx;
    border: 1px solid #a5a4a4;
    right: 0;
}

.stepper button::after {
    border-radius: 0;
}

.view_text_center {
    height: 100%;
}


/*加入购物车弹窗的按钮样式*/

.normal {
    padding: 0;
    color: #000;
    line-height: 55rpx;
    text-align: center;
    font-size: 50rpx;
    background: #fff;
    border-left: 1px solid #a4a4a4;
    border-right: 0;
    width: 160rpx;
    border-radius: 0;
}

.normal2 {
    color: #000;
    line-height: 55rpx;
    text-align: center;
    font-size: 50rpx;
    background: #fff;
    border-right: 1px solid #a4a4a4;
    border-left: 0;
    width: 160rpx;
    border-radius: 0;
    padding: 0;
}

.span1 {
    margin-top: 20rpx;
}

.remarks {
    color: #a4a4a4;
    font-size: 26rpx;
}

.span2 {
    float: right;
    font-size: 26rpx;
}

.all_num {
    font-size: 22rpx;
    color: #a4a4a4;
    margin-left: 230rpx;
}

.all_price {
    font-size: 24rpx;
    color: #ff4a01;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 104rpx;
    background-color: #fff;
    border-top: 2rpx solid #ebebeb;
    line-height: 120rpx;
    z-index: 2;
}

.submit {
    float: right;
    right: 0;
    width: 232rpx;
    height: 104rpx;
    line-height: 104rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
    text-align: center;
    color: #fff;
    background-color: #ff5555;
}

.footer_txt {
    margin-left: 280rpx;
}

.high {
    height: 200rpx;
}

.remark {
    margin: 0 auto;
    width: 660rpx;
    height: 160rpx;
    background-color: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
    position: relative;
    padding-left: 20rpx;
    padding-right: 20rpx;
}


/*空地址的时候显示图片样式*/

.add_img {
    margin: 0 auto;
    width: 700rpx;
    height: 100rpx;
    margin-top: 20rpx;
    border-radius: 20rpx;
    margin-left: 28rpx;
}