page {
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
  font-size: 28rpx;
  color: #666;
}

.orderbox {
  width: 100%;
  height: 100%;
}

.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.nav-item.active {
  color: #f55;
}

.tab-box {
  padding-top: 80rpx;
  height: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

/* 页面内容 */

.orderbox {
  width: 700rpx;
  margin: 0 auto;
  box-shadow: 0, 1, 0, 5;
}

.orderDetails {
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 5px 2px 6px rgb(175, 175, 175);
}

.orderListTitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #666;
  height: 80rpx;
  line-height: 80rpx;
}

.orderListDetails {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #dfdbdb;
  border-bottom: 1rpx solid #dfdbdb;
  height: 200rpx;
  color: #333;
}

.orderListDetails image {
  height: 150rpx;
  width: 150rpx;
}

.ListDetails {
  display: flex;
}

.orderListmodel {
  margin-top: 32rpx;
  margin-left: 20rpx;
}

.orderlistprice {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.num {
  color: #666;
}

.orderlistcountprice {
  border-bottom: 1rpx solid #dfdbdb;
  height: 80rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.finallprice {
  color: #f55;
}

.deletebtn, .paybtn {
  height: 60rpx;
  width: 200rpx;
  border: 1rpx solid #dfdbdb;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}

.paybtn {
  margin-left: 20rpx;
  border: 1rpx solid #f55;
  color: #f55;
}

.handle {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  height: 150rpx;
  align-items: center;
}
